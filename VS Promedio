# promedio.py

# Solicitar las calificaciones al usuario
print("Ingresa las 5 calificaciones a promediar:")

# Leer las calificaciones
c1 = float(input("Calificación 1: "))
c2 = float(input("Calificación 2: "))
c3 = float(input("Calificación 3: "))
c4 = float(input("Calificación 4: "))
c5 = float(input("Calificación 5: "))

# Calcular el promedio
p = (c1 + c2 + c3 + c4 + c5) / 5

# Mostrar el promedio
print("Tu promedio es:", p)
